<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:yListesiMaui_SQLite.Models"
             x:Class="yListesiMaui_SQLite.Views.TodoListPage"
             Title="TodoListPage">
    <Grid RowDefinitions="*, Auto">
        <CollectionView
            VerticalOptions="Fill"
            ItemsSource="{Binding Items}"
            SelectionMode="Single"
            SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:TodoItem">
                    <Grid ColumnDefinitions="*, Auto" Padding="20">
                        <Label Text="{Binding Name}"
                               VerticalTextAlignment="Center"/>
                        <Label Text="✔️"
                               Grid.Column="1"
                               VerticalTextAlignment="Center"
                               IsVisible="{Binding Done}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1" Text="Item Ekle" x:Name="OnItemAdded" Clicked="OnItemAdded_Clicked"
                    Margin="20"/>
    </Grid>
</ContentPage>